# Google Calendar API Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com

# Google OAuth Client ID (for Google Calendar integration)
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com

# Google OAuth Client Secret (optional, for server-side auth)
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# App Configuration
APP_NAME=Even G2 Calendar Companion
APP_VERSION=1.0.0

# BLE Configuration
BLE_SCAN_TIMEOUT=10000
BLE_CONNECTION_TIMEOUT=5000
BLE_RECONNECT_DELAY=2000
BLE_MAX_RECONNECT_ATTEMPTS=5

# Calendar Configuration
CALENDAR_UPDATE_INTERVAL=30000
CALENDAR_LOOKAHEAD_DAYS=7

# Display Configuration
DISPLAY_TIMEOUT=300000
DISPLAY_UPDATE_THROTTLE=1000

# Debug Mode
DEBUG_BLE=false
DEBUG_CALENDAR=false
DEBUG_DISPLAY=false
