{
  "name": "even-g2-calendar-companion",
  "version": "1.0.0",
  "description": "Production-ready calendar notification system for Even Realities G2 smart glasses",
  "main": "index.js",
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "start": "react-native start",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:ios": "cd ios && xcodebuild -workspace EvenG2Calendar.xcworkspace -scheme EvenG2Calendar -configuration Release",
    "clean": "cd android && ./gradlew clean && cd ../ios && xcodebuild clean",
    "clean:cache": "npm start -- --reset-cache",
    "postinstall": "cd ios && pod install && cd .."
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.73.2",
    "react-native-ble-plx": "^3.1.2",
    "@react-native-google-signin/google-signin": "^11.0.0",
    "react-native-calendar-events": "^2.2.0",
    "zustand": "^4.5.0",
    "date-fns": "^3.3.1",
    "react-native-permissions": "^4.1.0",
    "react-native-background-timer": "^2.4.1",
    "@react-native-async-storage/async-storage": "^1.21.0",
    "react-native-config": "^1.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/runtime": "^7.23.7",
    "@react-native/babel-preset": "^0.73.19",
    "@react-native/eslint-config": "^0.73.2",
    "@react-native/metro-config": "^0.73.3",
    "@react-native/typescript-config": "^0.73.1",
    "@types/jest": "^29.5.11",
    "@types/react": "^18.2.48",
    "@types/react-test-renderer": "^18.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "metro-react-native-babel-preset": "^0.77.0",
    "prettier": "^3.2.4",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "keywords": [
    "even-realities",
    "g2",
    "smart-glasses",
    "ar-glasses",
    "calendar",
    "ble",
    "react-native",
    "typescript",
    "waveguide",
    "wearable"
  ],
  "author": "Hari Kapadia <harikapadia99@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/harikapadia999/even-g2-calendar-companion.git"
  },
  "bugs": {
    "url": "https://github.com/harikapadia999/even-g2-calendar-companion/issues"
  },
  "homepage": "https://github.com/harikapadia999/even-g2-calendar-companion#readme"
}
